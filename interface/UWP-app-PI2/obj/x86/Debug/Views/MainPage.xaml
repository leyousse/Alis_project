<Page x:ConnectionId='1'
    x:Class="Demoo.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Demoo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:speech="using:Windows.Media.SpeechSynthesis"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1446">
    <Page.Resources>
        <DataTemplate x:Key="VoiceDataTemplate"                                     >
            <TextBlock Text="{Binding DisplayName}"/>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="215*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="15,5,0,10" >
            <ComboBox x:ConnectionId='12' x:Name="VoiceComboBox"
                                                                                             
                  ItemTemplate="{StaticResource VoiceDataTemplate}"
                                                                         
                  PlaceholderText="Pick a voice"
                  BorderBrush="White"
                  FontFamily="Cambria Math"
                  FontSize="16"
                  Width="135"
                  Height="32"
                  Margin="0,10,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 />
            <Button x:ConnectionId='13' x:Name="ConvertButton"
                FontFamily="Segoe MDL2 Assets"
                FontSize="60"
                Background="{x:Null}"
                Content="&#xE725;"
                Width="82"
                                            Height="63" HorizontalAlignment="Left" Margin="30,2,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,0.469"/>
        </StackPanel>

        <StackPanel Margin="146,0,0,32" VerticalAlignment="Stretch">
            <TextBox x:ConnectionId='11' x:Name="TextInputTextBox" 
                                                            
                 PlaceholderText="Enter Text"
                 AcceptsReturn="True"
                 Height="105"
                 FontSize="20"
                 Margin="0,15,148,0" HorizontalAlignment="Right" Width="1142" VerticalAlignment="Stretch"/>


        </StackPanel>
        <Button x:ConnectionId='4' Margin="1317,23,0,0"
                Name="SaveButton"
                FontFamily="Segoe MDL2 Assets"
                FontSize="50"
                Background="{x:Null}"
                Content="&#xE74E;"
                Width="74"
                                         Height="61" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <StackPanel x:ConnectionId='5' x:Name="StatusPanel"  Grid.Row="1" Margin="0,10,0,75">
            <Button x:ConnectionId='8' x:Name="ButtonSpeechtotext"
                FontFamily="Segoe MDL2 Assets"
                FontSize="50"
                Background="{x:Null}"
                Content="&#xE939;"
                Width="96" 
                                                                     
                RenderTransformOrigin="0.5,0.5"
                Height="67"
                HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Center"
                />
            <Border x:ConnectionId='9' x:Name="StatusBorder" BorderBrush="Orange">
                <TextBlock x:ConnectionId='10' x:Name="StatusBlock" FontWeight="Medium" Height="304" Margin="28,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            </Border>

        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10,0,10" HorizontalAlignment="Stretch">
            <Grid Margin="0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ListView x:ConnectionId='6'                                    IsItemClickEnabled="True" SelectionMode="Single"
                                                                      
                      Width="700"
                      Grid.Column="0"
                      />

                <ListView x:ConnectionId='7'                                          IsItemClickEnabled="True" SelectionMode="Single"
                                                                        
                  Width="600"
                  Grid.Column="1"
                 />
            </Grid>
        </StackPanel>

    </Grid>
</Page>
    

